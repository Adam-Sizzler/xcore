[Unit]
Description=X Core Service
After=network.target

[Service]
User=root
Group=root
ExecStart=/usr/local/v2ray-stat/v2ray-stat --dns --net --stats
WorkingDirectory=/usr/local/v2ray-stat
Restart=always
RestartSec=5
KillSignal=SIGTERM
TimeoutStopSec=10

[Install]
WantedBy=multi-user.target